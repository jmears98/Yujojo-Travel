<section class="sign-up-section hidden">
    <form action="" class="sign-up-form">
      <fieldset>
        <legend>
          SIGN UP
        </legend>

        <label>
          Username:

          <input type="text" id="username" name="username" required>
        </label>
        
        <label>
          Password:

          <input type="password" name="password" required>
        </label>
                
        <label>
          Confirm Password:

          <input type="confirm" name="confirm" required>
        </label>


        <button type="submit">
          SIGN UP
        </button>
      </fieldset>
    </form>
  </section>
